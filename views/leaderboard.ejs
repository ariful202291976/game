<!-- views/adminDashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="/styles/adminDashboard.css" />
  </head>
  <body>
    <div class="admin-dashboard-container">
      <!-- Sidebar  -->
      <aside class="sidebar">
        <ul>
          <li><a href="/user/portfolio">Portfolio</a></li>
          <li><a href="/games">Join Games</a></li>
          <li><a href="/leaderboard">Leaderboard</a></li>
          <li><a href="/user/profile">Profile</a></li>
        </ul>
      </aside>

      <!-- Main content area -->
      <div class="main-content">
        <h2>Leaderboard</h2>
        <div class="leaderboard-container">
          <h1>Leaderboard for Game: <%= gameId %></h1>
          <table>
            <thead>
              <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Email</th>
                <th>Cash</th>
              </tr>
            </thead>
            <tbody>
              <% if (participants.length > 0) { %> <%
              participants.forEach((participant, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= participant.name %></td>
                <td><%= participant.email %></td>
                <td><%= participant.cash.toFixed(2) %></td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="4">No participants found for this game.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
