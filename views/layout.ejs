<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : "Stock Trading Simulation Game"
      %>
    </title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include("partials/navbar") %>

    <!-- Main Content Area -->
    <main><%- body %></main>

    <!-- Toast Notification -->
    <div id="toast" class="toast"><%= loginSuccess %></div>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <script>
      // Show toast if loginSuccess message is provided
      <% if (loginSuccess) { %>
        const toast = document.getElementById("toast");
        toast.classList.add("show");
        setTimeout(() => { toast.classList.remove("show"); }, 3000);
      <% } %>
    </script>
  </body>
</html>
